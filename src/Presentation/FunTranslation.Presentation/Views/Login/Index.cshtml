@model UserSignInViewModel

<h3>Login</h3>

<form asp-action="index" asp-controller="Login" method="post">
    <div class="form-group row">
        <div class="col-2">
            <label for="InputEmail1">UserName:</label>
        </div>
        <div class="col-10">
            <input type="text" asp-for="@Model.UserName" class="form-control" id="InputEmail1" aria-describedby="emailHelp" placeholder="UserName">
            <small id="emailHelp" class="form-text text-muted"></small>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mt-2">
        <div class="col-2">
            <label for="InputPassword1">Password:</label>
        </div>
        <div class="col-10">
            <input type="password" asp-for="@Model.Password" class="form-control" id="InputPassword1" placeholder="Password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div asp-validation-summary="ModelOnly" class="text-danger">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
