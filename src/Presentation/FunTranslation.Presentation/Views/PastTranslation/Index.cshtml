@model PastTranslateViewModel

<form asp-action="Index" asp-controller="PastTranslation" method="get">
    <div class="row">
        <div class="form-group col-md-3">
            @Html.DropDownListFor(i=>i.UserId, ViewBag.Users as List<SelectListItem>, "Select User", new { @class ="form-control"})
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>

        <div class="form-group col-md-3">
            @Html.DropDownListFor(i=>i.LanguageId, ViewBag.Languages as List<SelectListItem>, "Select Language", new { @class ="form-control"})
            <span asp-validation-for="LanguageId" class="text-danger"></span>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>

        <div class="col-md-3">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>

<br />
<div class="row">

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Original Text</th>
                <th scope="col">Language Name</th>
                <th scope="col">Translated Text</th>
                <th scope="col">Translated Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PastTranslations)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <th>@item.OriginalText</th>
                    <th>@item.Language.LanguageName</th>
                    <th>@item.TranslatedText</th>
                    <th>@item.CreateDate</th>
                </tr>
            }
        </tbody>
    </table>
</div>